    private async Task DeletePlan(LeavePlan plan)
    {
        var confirmed = await DialogService.ShowMessageBox(
            "Delete Leave Plan",
            $"Are you sure you want to delete plan '{plan.ApplicationNo}'? This action cannot be undone.",
            yesText: "Delete",
            cancelText: "Cancel",
            options: new DialogOptions { MaxWidth = MaxWidth.Small, CloseButton = true });

        if (confirmed == true)
        {
            try
            {
                var deleted = await LeavePlanService.DeleteLeavePlanAsync(plan.ApplicationNo, plan.ODataEtag);

                if (deleted)
                {
                    Snackbar.Add($"Plan {plan.ApplicationNo} deleted successfully", Severity.Success);
                    await LoadLeavePlans();
                }
                else
                {
                    Snackbar.Add("Failed to delete plan", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to delete: {ex.Message}", Severity.Error);
            }
        }
    }

    private string ParseDate(string? dateString)
    {
        if (string.IsNullOrEmpty(dateString) || dateString == "0001-01-01")
            return "N/A";

        if (DateTime.TryParse(dateString, out var date))
        {
            return date.ToString("dd MMM yyyy");
        }

        return dateString;
    }

