        {
            "Active" => ("background-color: #4caf50; color: white;", Icons.Material.Filled.CheckCircle),
            "Inactive" => ("background-color: #999; color: white;", Icons.Material.Filled.Circle),
            _ => ("background-color: #666; color: white;", Icons.Material.Filled.Help)
        };

        return @<MudChip T="string" Size="Size.Small" Style="@colorStyle" Icon="@icon">@status</MudChip>;
    }
