    private async Task SaveTrainingRequest()
    {
        try
        {
            await form.Validate();

            if (!form.IsValid)
            {
                Snackbar.Add("Please fill in all required fields correctly", Severity.Error);
                return;
            }

            saving = true;
            StateHasChanged();

            // Validation
            if (!startDate.HasValue)
            {
                Snackbar.Add("Please select a start date", Severity.Error);
                saving = false;
                return;
            }

            if (!endDate.HasValue)
            {
                Snackbar.Add("Please select an end date", Severity.Error);
                saving = false;
                return;
            }

            if (endDate <= startDate)
            {
                Snackbar.Add("End date must be after start date", Severity.Error);
                saving = false;
                return;
            }

            if (string.IsNullOrEmpty(formModel.CourseTitle))
            {
                Snackbar.Add("Please enter a course title", Severity.Error);
                saving = false;
                return;
            }

            if (string.IsNullOrEmpty(formModel.TrainingInstitution))
            {
                Snackbar.Add("Please enter a training institution", Severity.Error);
                saving = false;
                return;
            }

            // Parse estimated cost
            if (!decimal.TryParse(estimatedCostString, out var estimatedCost))
            {
                Snackbar.Add("Please enter a valid estimated cost", Severity.Error);
                saving = false;
                return;
            }

            if (estimatedCost < 0)
            {
                Snackbar.Add("Estimated cost cannot be negative", Severity.Error);
                saving = false;
                return;
            }

            if (formModel.Justification.Length < 50)
            {
                Snackbar.Add("Justification must be at least 50 characters", Severity.Error);
                saving = false;
                return;
            }

            if (formModel.ExpectedOutcomes.Length < 30)
            {
                Snackbar.Add("Expected outcomes must be at least 30 characters", Severity.Error);
                saving = false;
                return;
            }

            // Prepare the request
            formModel.EstimatedCost = estimatedCost;
            formModel.SelfFunded = fundingType == "Self";
            formModel.StartDate = startDate.Value.ToString("yyyy-MM-dd");
            formModel.EndDate = endDate.Value.ToString("yyyy-MM-dd");

            Console.WriteLine($"📤 {(isEditMode ? "Updating" : "Creating")} training request:");
            Console.WriteLine($"   Course: {formModel.CourseTitle}");
            Console.WriteLine($"   Institution: {formModel.TrainingInstitution}");
            Console.WriteLine($"   Duration: {formModel.CourseDuration}");
            Console.WriteLine($"   Cost: {formModel.EstimatedCost}");
            Console.WriteLine($"   Start: {formModel.StartDate}");

            bool success;
            string message;

            if (isEditMode && editingRequest != null)
            {
                // For UPDATE: Create a TrainingRequestUpdate model
                var updateModel = new TrainingRequestUpdate
                {
                    RequestNo = editingRequest.RequestNo,
                    HighestAcademicQualification = formModel.HighestAcademicQualification,
                    CurrentlyPursuingTraining = formModel.CurrentlyPursuingTraining,
                    TrainingInstitution = formModel.TrainingInstitution,
                    CourseTitle = formModel.CourseTitle,
                    SponsoringBody = formModel.SponsoringBody,
                    SelfFunded = formModel.SelfFunded,
                    StartDate = formModel.StartDate,
                    EndDate = formModel.EndDate,
                    CourseDuration = formModel.CourseDuration,
                    TrainingType = formModel.TrainingType,
                    TrainingMode = formModel.TrainingMode,
                    EstimatedCost = formModel.EstimatedCost,
                    Justification = formModel.Justification,
                    ExpectedOutcomes = formModel.ExpectedOutcomes,
                    Status = editingRequest.Status,
                    ConvertedToPlan = editingRequest.ConvertedToPlan
                };

                Console.WriteLine($"🔄 Updating request {updateModel.RequestNo} with ETag: {editingRequest.ODataEtag}");

                // Call Update method with update model and etag
                var updateResult = await TrainingRequestService.UpdateTrainingRequestAsync(updateModel, editingRequest.ODataEtag);
                success = updateResult.Success;
                message = updateResult.Message;
            }
            else
            {
                // For CREATE
                var createResult = await TrainingRequestService.CreateTrainingRequestAsync(formModel);
                success = createResult.Success;
                message = createResult.Message;
            }

            if (success)
            {
                Snackbar.Add(isEditMode ? "Training request updated successfully!" : "Training request created successfully!", Severity.Success);
                successMessage = message;
                CloseDrawer();
                await LoadTrainingRequests();
            }
            else
            {
                Snackbar.Add(message, Severity.Error, config => { config.VisibleStateDuration = 8000; });
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Exception in SaveTrainingRequest: {ex}");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            saving = false;
            StateHasChanged();
        }
    }

