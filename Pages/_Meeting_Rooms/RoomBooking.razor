    }

    private bool IsBookingValid()
    {
        if (selectedRoom == null) return false;
        if (selectedDate == null) return false;
        if (startTime == null || endTime == null) return false;
        if (endTime <= startTime) return false;
        if (formModel.NoOfParticipants > selectedRoom.RoomCapacity) return false;
        if (string.IsNullOrWhiteSpace(formModel.Purpose)) return false;
        if (selectedDate < DateTime.Now.Date) return false;
        if (selectedDate == DateTime.Now.Date && startTime < DateTime.Now.TimeOfDay) return false;

        return true;
    }

    private string CalculateDuration()
    {
        if (startTime == null || endTime == null || endTime <= startTime)
            return "Invalid time range";

        var duration = endTime.Value - startTime.Value;
        
        if (duration.TotalHours >= 1)
        {
            var hours = (int)duration.TotalHours;
            var minutes = duration.Minutes;
            if (minutes > 0)
                return $"{hours} hour{(hours > 1 ? "s" : "")} {minutes} minute{(minutes > 1 ? "s" : "")}";
            return $"{hours} hour{(hours > 1 ? "s" : "")}";
        }
        
        return $"{duration.TotalMinutes} minute{(duration.TotalMinutes > 1 ? "s" : "")}";
    }

    private async Task SaveBooking()
    {
        try
        {
            await form.Validate();

            if (!form.IsValid)
            {
                Snackbar.Add("Please fill in all required fields correctly", Severity.Error);
                return;
            }

            if (!IsBookingValid())
            {
                Snackbar.Add("Please check your booking details", Severity.Error);
                return;
            }

            saving = true;
            StateHasChanged();

            // Check room availability
            if (!isEditMode)
            {
                var isAvailable = await RoomBookingService.CheckRoomAvailabilityAsync(
                    selectedRoom.RoomNo,
                    selectedDate.Value.ToString("yyyy-MM-dd"),
                    startTime.Value.ToString(@"hh\:mm"),
                    endTime.Value.ToString(@"hh\:mm"));

                if (!isAvailable)
                {
                    Snackbar.Add("Room is not available for the selected time slot", Severity.Error);
                    saving = false;
                    return;
                }
            }

            // Prepare the booking
            formModel.RoomNo = selectedRoom.RoomNo;
            formModel.RoomName = selectedRoom.RoomName;
            formModel.RoomCapacity = selectedRoom.RoomCapacity;
            formModel.Date = selectedDate.Value.ToString("yyyy-MM-dd");
            formModel.StartTime = startTime.Value.ToString(@"hh\:mm");
            formModel.EndTime = endTime.Value.ToString(@"hh\:mm");
            formModel.Duration = CalculateDuration();
            formModel.EmployeeNo = currentEmployeeNo;
            formModel.EmployeeName = currentEmployeeName;

            Console.WriteLine($"📤 {(isEditMode ? "Updating" : "Creating")} booking:");
            Console.WriteLine($"   Room: {formModel.RoomName} ({formModel.RoomNo})");
            Console.WriteLine($"   Date: {formModel.Date}");
            Console.WriteLine($"   Time: {formModel.StartTime} - {formModel.EndTime}");
            Console.WriteLine($"   Purpose: {formModel.Purpose}");

            string result;
            if (isEditMode && editingBooking != null)
            {
                // Update the existing booking with new values
                editingBooking.RoomNo = formModel.RoomNo;
                editingBooking.RoomName = formModel.RoomName;
                editingBooking.RoomCapacity = formModel.RoomCapacity;
                editingBooking.NoOfParticipants = formModel.NoOfParticipants;
                editingBooking.Date = formModel.Date;
                editingBooking.StartTime = formModel.StartTime;
                editingBooking.EndTime = formModel.EndTime;
                editingBooking.Duration = formModel.Duration;
                editingBooking.Purpose = formModel.Purpose;
                editingBooking.Remarks = formModel.Remarks;
                editingBooking.SpecialRequest = formModel.SpecialRequest;

                Console.WriteLine($"🔄 Updating booking {editingBooking.BookingNo} with ETag: {editingBooking.ODataEtag}");

                result = await RoomBookingService.UpdateBookingAsync(editingBooking);
            }
            else
            {
                // For create mode, call the Create method
                result = await RoomBookingService.CreateBookingAsync(formModel);
            }

            if (result.StartsWith("Success"))
            {
                Snackbar.Add(isEditMode ? "Booking updated successfully!" : "Booking created successfully!", Severity.Success);
                successMessage = result;
                CloseDrawer();
                await LoadAvailableRooms();
                await LoadBookings();
            }
            else
            {
                Snackbar.Add(result, Severity.Error, config => { config.VisibleStateDuration = 8000; });
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Exception in SaveBooking: {ex}");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            saving = false;
            StateHasChanged();
        }
    }

    private async Task CancelBooking(Models.RoomBooking booking)
    {
        var confirmed = await DialogService.ShowMessageBox(
            "Cancel Booking",
            $"Are you sure you want to cancel booking '{booking.BookingNo}'?",
            yesText: "Cancel Booking",
            cancelText: "Keep Booking",
            options: new DialogOptions
            {
                MaxWidth = MaxWidth.Small,
                CloseButton = true
            });

        if (confirmed == true)
        {
            try
            {
                var result = await RoomBookingService.CancelBookingAsync(booking.BookingNo, "Cancelled by user");

                if (result.StartsWith("Success"))
                {
                    Snackbar.Add($"Booking {booking.BookingNo} cancelled successfully", Severity.Success);
                    await LoadAvailableRooms();
                    await LoadBookings();
                }
                else
                {
                    Snackbar.Add(result, Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to cancel: {ex.Message}", Severity.Error);
            }
        }
    }

