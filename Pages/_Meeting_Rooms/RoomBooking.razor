    private IEnumerable<Models.RoomBooking> FilteredBookings
    {
        get
        {
            var filtered = bookings.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                filtered = filtered.Where(t =>
                    (t.BookingNo?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (t.RoomName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (t.Purpose?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (t.RoomNo?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false));
            }

            if (!string.IsNullOrWhiteSpace(statusFilter))
            {
                filtered = filtered.Where(t => t.Status == statusFilter);
            }

            return filtered.OrderByDescending(t => t.Date).ThenByDescending(t => t.StartTime);
        }
    }

    protected override async Task OnInitializedAsync()
    {
