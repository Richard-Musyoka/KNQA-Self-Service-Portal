    private async void OpenEditDrawer(Models.RoomBooking booking)
    {
        if (booking.Status != BookingStatus.PENDING)
        {
            Snackbar.Add("Cannot edit booking that is not in Pending status", Severity.Warning);
            return;
        }

        try
        {
            // Fetch the latest version with all fields
            var currentBooking = await RoomBookingService.GetBookingAsync(booking.BookingNo);

            if (currentBooking == null)
            {
                Snackbar.Add("Could not load booking details", Severity.Error);
                return;
            }

            isEditMode = true;
            editingBooking = currentBooking;

            // Find the room
            selectedRoom = availableRooms.FirstOrDefault(r => r.RoomNo == currentBooking.RoomNo);

            // Parse date and time
            if (DateTime.TryParse(currentBooking.Date, out var date))
                selectedDate = date;

            if (TimeSpan.TryParse(currentBooking.StartTime, out var start))
                startTime = start;

            if (TimeSpan.TryParse(currentBooking.EndTime, out var end))
                endTime = end;

            formModel = new RoomBookingCreate
            {
                EmployeeNo = currentBooking.EmployeeNo,
                EmployeeName = currentBooking.EmployeeName,
                RoomNo = currentBooking.RoomNo,
                RoomName = currentBooking.RoomName,
                RoomCapacity = currentBooking.RoomCapacity,
                NoOfParticipants = currentBooking.NoOfParticipants,
                Date = currentBooking.Date,
                Purpose = currentBooking.Purpose,
                Remarks = currentBooking.Remarks,
                SpecialRequest = currentBooking.SpecialRequest,
                Duration = currentBooking.Duration
            };

            drawerOpen = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading booking for edit: {ex.Message}");
            Snackbar.Add("Failed to load booking for editing", Severity.Error);
        }
    }

    private void CloseDrawer()
