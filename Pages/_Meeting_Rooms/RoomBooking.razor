    private async Task<IEnumerable<AvailableMeetingRoom>> SearchRooms(string value)
    {
        try
        {
            if (string.IsNullOrWhiteSpace(value))
                return availableRooms;

            return availableRooms.Where(r =>
                r.RoomName.Contains(value, StringComparison.OrdinalIgnoreCase) ||
                r.RoomNo.Contains(value, StringComparison.OrdinalIgnoreCase) ||
                r.Location.Contains(value, StringComparison.OrdinalIgnoreCase));
        }
        catch
        {
            return availableRooms;
        }
    }

